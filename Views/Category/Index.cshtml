@model List<ECommerce.Core.Model.Entity.Product>
@{
    ViewBag.Title = "Index";
    var category = (ECommerce.Core.Model.Entity.Category)ViewBag.category;
}


<h3>@category.Name Kategorisindeki Ürünler</h3>
@{
    foreach (var item in Model)
    {
        <div class="productBox">
            <p class="title"> @item.Name</p>
            <img src=" @item.ImageUrl" />
            <p>
                @item.Brand
            </p>
            <p>
                @item.Price.ToString("##.## ₺")
            </p>
            <p>
                @item.Description
            </p>
            <a href="/Urun/@item.Name.Replace(" ","-")/@item.ID" class="btn btn-success">İncele</a>
            <a href="#" class="btn btn-default">Sepete Ekle</a>
        </div>
    }
}
<div class="row"></div>
<style>
    .productBox {
        width: 200px;
        float: left;
        margin: 10px;
        border: 1px solid gray;
        padding: 10px;
    }

        .productBox img {
            width: 100%;
        }

        .productBox .title {
            font-weight: bold;
            text-align: center;
        }

        .productBox p {
            text-align: center;
        }
</style>
